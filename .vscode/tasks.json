{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Client",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "Run Server",
      "type": "shell",
      "command": "npx nodemon index.js",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}